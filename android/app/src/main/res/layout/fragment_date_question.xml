<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DateQuestionFragment"
    android:orientation="horizontal"
    android:gravity="center_vertical|center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_session_date_question"
        android:layout_gravity="center_vertical"
        android:paddingBottom="10dp"
        android:textColor="@color/textColorPrimary"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/button_add_session_date_question_yes"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_check_circle"
            android:tint="@color/colorPrimary"/>

        <ImageView
            android:id="@+id/button_add_session_date_question_no"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_cancel_circle"
            android:tint="@color/colorPrimary"/>

    </LinearLayout>

</LinearLayout>